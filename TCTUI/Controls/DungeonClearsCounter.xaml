<UserControl x:Class="Tera.DungeonClearsCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tera"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="30" Height="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Rectangle Name="bgRect" Grid.Row="0" Fill="#20000000" Margin="3,7" Opacity="1"/>
        <TextBlock Name="clearsText" Foreground="White" TextAlignment="Center" FontWeight="DemiBold" FontSize="13" Text="0" VerticalAlignment="Center" Padding="0" Margin="0,0,0,1"/>
        <TextBlock Name="dungeonName" Grid.Row="1" Text="---" TextAlignment="Center" Foreground="#91000000"/>

    </Grid>
</UserControl>
