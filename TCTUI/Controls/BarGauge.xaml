<UserControl x:Class="Tera.BarGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tera"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock x:Name="txt" HorizontalAlignment="Center" TextAlignment="Right" Foreground="#a0000000" Margin="0,0,5,0" Width="30">value</TextBlock>
            <Grid>
                    <Rectangle x:Name="base" Height="4" Width="70" Fill="#12000000" VerticalAlignment="Center"/>

                <Rectangle x:Name="val" Height="4" Width="10" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Left"/>

            </Grid>
            
        </StackPanel>   
        
    </Grid>
</UserControl>
